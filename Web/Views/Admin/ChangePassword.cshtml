@model Web.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<section class="forgotUserForm">
    @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Token)

        <div class="form-group">
            <div class="col-md-3 col-centered">
                @Html.PasswordFor(model => model.OldPassword, new {@class = "form-control", @placeholder = "Oude wachtwoord" })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 col-centered">
                @Html.PasswordFor(model => model.Password, new {@class = "form-control", @placeholder = "Nieuwe wachtwoord" })
                @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 col-centered">
                @Html.PasswordFor(model => model.ConfirmationalPassword, new {@class = "form-control", @placeholder = "Bevestig wachtwoord" })
                @Html.ValidationMessageFor(model => model.ConfirmationalPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-centered">
                <input type="submit" value="Wachtwoord wijzigen" class="btn btn-success"/>
            </div>
        </div>

    }
</section>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
