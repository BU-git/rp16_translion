@model System.Collections.Generic.List<IDAL.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="tlr-usr-section">
    <!--Header-->
    <div class="row" id="tlr-usr-section-hdr">
        <div class="col-sm-3 col-md-2 col-lg-2">
            <h3>Werknemers</h3>
        </div>
        <div class="col-sm-offset-1 col-md-offset-4 col-lg-offset-4 col-sm-4 col-md-3 col-lg-3">
            @Html.ActionLink("Werknemer toevoegen", "AddEmployee", "Employer", null, new { id = "addWorker"})
        </div>
        <div class="col-sm-4 col-md-3 col-lg-3">
            <span class="glyphicon glyphicon-search tlr-usr-search-img"></span>
            <input type="search" id="emplSearch" placeholder="search" autofocus/>
        </div>
    </div>
    <!--Main panel with users-->
    <div class="row" id="tlr-usr-section-main">
        @foreach(var empl in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 tlr-usr-info">
                <a href="@Url.Action("EmployeeInfo", new { id = empl.EmployeeId })" class="tlr-usr-inner-info">
                    <img src="~/Content/Images/UserImg.png" alt="@empl.FirstName">
                </a>
                <a href="@Url.Action("ChangeEmployeeName", "Employer", new { id = empl.EmployeeId })" class="tlr-usr-info-label-btn">
                    <span data-userName class="tlr-usr-name">@empl.FirstName @empl.Prefix @empl.LastName</span>
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
            </div>
        }
    </div>
</section>