@model Web.ViewModels.EmployerSettingsViewModel

@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="emplSettings">
    <h3>Werkgever gegevens</h3>
    <div class="row emplSettingsMain">
        <!--Image and username-->
        <div class="hidden-xs col-sm-3 col-md-2" id="emplSettingsMainImage">
            <p>@Model.CompanyName</p>
            <a href="@Url.Action("Index", "Employer")">
                <img src="~/Content/Images/UserImg.png" alt="User"/>
            </a>
        </div> 
        <!--User info section-->
        <div class="col-xs-12 col-sm-5 col-md-7">
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                   @Html.LabelFor(m => m.FirstName, new { @class= "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.FirstName)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.Prefix, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.Prefix)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.LastName, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.LastName)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.TelephoneNumber, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.TelephoneNumber)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.EmailAdress, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.EmailAdress)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.PostalCode, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.PostalCode)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.Adress, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.Adress)
                </div>
            </div>
            <div class="emplSettingsMainData">
                <div class="emplSettingsMainDataElem">
                    @Html.LabelFor(m => m.City, new { @class = "emplSettingsMainData" })
                </div>
                <div class="emplSettingsMainDataElem">
                    @Html.DisplayFor(m => m.City)
                </div>
            </div>
        </div>  
        <!--Left button-->
        <div class="col-sm-4 col-md-3">
            @Html.ActionLink("Verander wachtwoord", "PasswordChange", null, new { @class= "emplSettingsButton" })
        </div>
    </div>

    <!--Back-->
    <div class="row emplSettingsBottom">
        <div class="col-sm-6 col-md-3">
            @Html.ActionLink("Terug", "Index", null, new { @class = "emplSettingsButton" })
        </div>
        
    </div>
</section>
