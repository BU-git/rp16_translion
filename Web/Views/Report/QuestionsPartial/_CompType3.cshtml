@model IDAL.Models.Question

<div class="questionComplicated" id="@String.Format("p{0}q{1}", Model.PageId, Model.Id)">
    <div class="questionHeader">
        <h3>@Model.QuestionName</h3>
    </div>
    <div id="answersContainer">
        <div class="answerLine">
            <div class="col-md-4">
                <input type="text" placeholder="Hoeveel uur?" class="form-control" name="@String.Format("p{0}q{1}t3l0a1", Model.PageId, Model.Id)" />
            </div>
            <div class="col-md-3">
                <input type="text" placeholder="Sinds wanneer" class="datepicker form-control" name="@String.Format("p{0}q{1}t3l0a2", Model.PageId, Model.Id)" />
            </div>
        </div>
    </div>
    <div class="addAnswerLine">
        <div class="col-md-4">
            <div class="btn btn-primary addAnswerLineBtn">Add answer</div>
            <div class="btn btn-warning delAnswerLineBtn">Delete answer</div>
        </div>
    </div>
</div>

