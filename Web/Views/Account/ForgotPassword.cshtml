@model Web.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot password";
}
<section class="forgotPassForm">
    @using (Html.BeginForm("ForgotPassword", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger col-centered"})
        <div class="row">
            <div class="col-md-12 col-centered lb-forgot">
                Om uw wachtwoord te herstellen vult u hieronder alstublieft uw gebruikersnaam in.
            </div>
        </div>
        <div class="form-group form-forgot">
            <div class="col-md-8 pull-right tb-forgot">
                @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
            </div>
        </div>

        <br/>
        <div class="row">
            <div class="col-md-5">
                <!--<input type="submit" value="Annuleren" class="btn btn-danger pull-right"/>--><!--Changed to link-->
                @Html.ActionLink("Annuleren", "Login", "Account", null, new {@class = "btn btn-danger pull-right"})
            </div>
            <div class="col-md-6 col-md-offset-1 tb-forgot">
                <input type="submit" value="Verzenden" class="btn btn-success"/>
            </div>
        </div>
    }
</section>